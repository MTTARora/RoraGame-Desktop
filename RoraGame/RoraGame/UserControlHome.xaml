<UserControl x:Class="RoraGame.UserControlHome"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RoraGame"
             mc:Ignorable="d" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Grid HorizontalAlignment="Center">
        <StackPanel>
            <Image x:Name="Banner1" VerticalAlignment="Top" Source="E:\Projects\RoraGame\RoraGame\RoraGame\Resources\splashBanner_magic.jpg"></Image>
            <WrapPanel HorizontalAlignment="Center">
                <materialDesign:Card Margin="0 20 30 0" Width="440" Height="254" materialDesign:ShadowAssist.ShadowDepth="Depth1">
                    <StackPanel>
                        <TextBlock Grid.Row="1" Style="{StaticResource MaterialDesignTitleTextBlock}" Margin="20,20,20,0">
                Các bước để thuê games tại RoraGame
        </TextBlock>
        <ListView Grid.Row="2" Margin="30,0,0,15">
            <Button>
                1. Tải ứng dụng RoraGame
            </Button>
            <Button>
                2. Tạo tài khoản
            </Button>
            <Button>
                3. Nạp tiền vào tài khoản
            </Button>
            <Button>
                4. Tìm games muốn thuê và chơi
            </Button>
        </ListView>
        </StackPanel>
                </materialDesign:Card>
                <materialDesign:Card Margin="0 20 0 0" Width="440" Height="254" materialDesign:ShadowAssist.ShadowDepth="Depth1">
                    <StackPanel>
                    <TextBlock Grid.Row="1" Style="{StaticResource MaterialDesignTitleTextBlock}" Margin="20,20,0,0">
                Game mới cập nhật
                    </TextBlock>
                    <ListView Name ="GameNew" Margin="10 0 0 0">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn
                        DisplayMemberBinding="{Binding Dates}"
                        Header="Ngày" />
                                <GridViewColumn
                        DisplayMemberBinding="{Binding Name}"
                        Header="Tên" />
                                <GridViewColumn
                        DisplayMemberBinding="{Binding Description}"
                        Header="Thông tin" />
                            </GridView>
                        </ListView.View>
                    </ListView>
                </StackPanel>
                </materialDesign:Card>
            </WrapPanel>
        </StackPanel>
    </Grid>
</UserControl>
