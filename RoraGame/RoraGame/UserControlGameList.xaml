<UserControl x:Class="RoraGame.UserControlGameList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RoraGame"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:util="clr-namespace:Wpf.Util"
             mc:Ignorable="d" >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" HorizontalAlignment="Left" Margin="20 20 20 10">
            <DockPanel>
                <TextBlock Margin="10 0 0 0" VerticalAlignment="Center" Style="{StaticResource MaterialDesignSubheadingTextBlock}">Đang thuê game: </TextBlock>
                <TextBlock Margin="10 0 0 0" VerticalAlignment="Center" Foreground="Red" Style="{StaticResource MaterialDesignSubheadingTextBlock}">PlayerUnknown's Battlegrounds</TextBlock>
                <Grid Width="150" Margin="10 0 0 0">
                    <Button Background="Red" Style="{StaticResource MaterialDesignRaisedButton}" materialDesign:ButtonProgressAssist.Value="-1" materialDesign:ButtonProgressAssist.IsIndicatorVisible="True" materialDesign:ButtonProgressAssist.IsIndeterminate="True" Content="Dừng thuê game" Margin="2,0" BorderBrush="Red" />
                </Grid>
                <TextBlock Margin="10 0 0 0" VerticalAlignment="Center" Style="{StaticResource MaterialDesignSubheadingTextBlock}">Thời gian thuê: 0:45:32</TextBlock>
            </DockPanel>
        </Grid>
        <Grid Grid.Row="1">
            <ListView Name ="LsGames" Margin="8 0 0 0"
                IsSynchronizedWithCurrentItem="True"
          util:GridViewSort.AutoSort="True"
          util:GridViewSort.ShowSortGlyph="False">
            <ListView.View>
                <GridView>
                     <GridViewColumn
                            DisplayMemberBinding="{Binding No}"
                            Header="#" 
                         util:GridViewSort.PropertyName="No"/>
                     <GridViewColumn
                            DisplayMemberBinding="{Binding Name}"
                            Header="GAME"
                         util:GridViewSort.PropertyName="Name"/>
                     <GridViewColumn
                            DisplayMemberBinding="{Binding Platform}"
                            Header="NỀN TẢNG"
                         util:GridViewSort.PropertyName="Platform"/>
                    <!--<GridViewColumn
                            DisplayMemberBinding="{Binding Status}"
                            Header="NỀN TẢNG" />-->
                    <GridViewColumn
                            Header="THUÊ">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Tag="{Binding ThueGame}" Content="Thuê Game" Height="20" FontSize="13" Margin="0 -3 0 -20" Padding="10 0 10 0" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn
                            DisplayMemberBinding="{Binding Description}"
                            Header="THÔNG TIN" />
                </GridView>
            </ListView.View>
        </ListView>
        </Grid>
    </Grid>
</UserControl>
