<Page x:Class="RoraGame.PageAccountInformation"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RoraGame"
      mc:Ignorable="d" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="Thông tin tài khoản">
    <Grid HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10">
        <materialDesign:Card Margin="0 20 30 0" Width="440" Height="254">
            <StackPanel>
                <TextBlock Grid.Row="1" Style="{StaticResource MaterialDesignTitleTextBlock}" Margin="20,20,20,0">
                Các bước để thuê games tại RoraGame
                </TextBlock>
                <ListView Grid.Row="2" Margin="30,0,0,15">
                    <Button>
                        1. Tải ứng dụng RoraGame
                    </Button>
                    <Button>
                        2. Tạo tài khoản
                    </Button>
                    <Button>
                        3. Nạp tiền vào tài khoản
                    </Button>
                    <Button>
                        4. Tìm games muốn thuê và chơi
                    </Button>
                </ListView>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</Page>
